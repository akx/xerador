{
  "extends": "eslint:recommended",
  "env": {
    "browser": true,
    "node": true,
  },
  "ecmaFeatures": {
    "arrowFunctions": true,
    "blockBindings": true,
    "defaultParams": true,
    "destructuring": true,
    "templateStrings": true
  },
  "rules": {
    "semi": [2, "always"],
    "quotes": [2, "double"]
  }
}
